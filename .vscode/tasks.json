{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Lilypond",
      "type": "shell",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "command": "lilypond  \"${relativeFile}\" && code \"${fileBasenameNoExtension}.pdf\"",
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      },
      "problemMatcher": []
    }
  ]
}
